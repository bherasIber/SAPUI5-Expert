<mvc:View controllerName="logaligroup.invoices.controller.App"
            xmlns="sap.m" 
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
    <App id="app">
        <pages>
                <Page id="page" title="{i18n>appTitle}">
                        <content>
                                <Panel id="panel" headerText="{i18n>helloPanel}">
                                        <content>
                                                <!--Text id="text" text="Hello World123"></Text-->
                                                <Button id="button" text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
                                                <Input id="input" value="{/recipient/name}"
                                                        description="{/recipient/name}"
                                                        valueLiveUpdate="true"
                                                        width="60%">
                                                </Input>
                                        </content>
                                </Panel>
                        </content>
                </Page>
        </pages>
    </App>
</mvc:View>