<mvc:View controllerName="logaligroup.invoices.controller.Details"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc" 
        xmlns:logali="logaligroup.invoices.control"
        displayBlock="true">
    <Page id="pageDetails" title="{i18n>detailsPageTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <ObjectHeader id="objectHeader" title="{northwind>Quantity} x {northwind>ProductName}" responsive="true" fullScreenOptimized="true">
            <attributes>
                <ObjectAttribute id="ShipName" text="{northwind>ShipName}"/>
                <ObjectAttribute id="ShipAddress" text="{northwind>ShipAddress}"/>
                <ObjectAttribute id="ShipCity" text="{northwind>ShipCity}"/>
                <ObjectAttribute id="ShipRegion" text="{northwind>ShipRegion}"/>
                <ObjectAttribute id="ShipPostalCode" text="{northwind>ShipPostalCode}"/>
                <ObjectAttribute id="ShipCountry" text="{northwind>ShipCountry}"/>
                <ObjectAttribute id="CustomerID" text="{northwind>CustomerID}"/>
                <ObjectAttribute id="CustomerName" text="{northwind>CustomerName}"/>
            </attributes>
        </ObjectHeader>
        <logali:ProductRating id="rating" class="sapUiSmallMarginBeginEnd" change=".onRatingChange"></logali:ProductRating>
    </Page>

</mvc:View> 