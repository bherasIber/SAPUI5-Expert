<mvc:View controllerName="logaligroup.invoices.controller.HelloPanel"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Panel id="panel" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <!--Text id="text" text="Hello World123"></Text-->
            <Button id="button" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" />
            <Input id="input" value="{/recipient/name}" valueLiveUpdate="true" width="60%" />
            <Text id="text" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements" />
        </content>
    </Panel>    
</mvc:View>
