<mvc:View controllerName="logaligroup.invoices.controller.HelloPanel"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc" 
        xmlns:core="sap.ui.core"
        displayBlock="true">
    <Panel id="panel" 
            headerText="{i18n>helloPanel}" 
            class="sapUiResponsiveMargin" 
            width="auto"
            expandable="{device>/system/phone}"
            expanded="{= !${device>/system/phone} }">
        <content>
            <!--Text id="text" text="Hello World123"></Text-->
            <Button id="helloDialogButton" 
                    icon="sap-icon://action" 
                    text="{i18n>helloDialogButton}" press=".onOpenDialog" class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop" />
            <Button id="button" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd sapUiHideOnDesktop" />
            <Input id="input" value="{/recipient/name}" valueLiveUpdate="true" width="60%" />
            <Text id="text" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements" />
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.invoices.view.Form01" type="XML"/>
</mvc:View>
